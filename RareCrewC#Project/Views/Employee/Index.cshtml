@model List<EmployeeWorkData>

<div class="col-12 mt-5 d-flex justify-content-center">
    <div class="col-6">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Total time worked in month (hours)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    var rowClass = employee.TotalTimeWorked < 100 ? "table-danger" : "";
                    <tr class="@rowClass">
                        <td>@(string.IsNullOrEmpty(employee.Name) ? "Unknown" : employee.Name)</td>
                        <td class="text-center">@employee.TotalTimeWorked</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="col-8 mt-5">
    <img src="@Url.Action("GenerateChart", "PieChart")" alt="Employees Work Hours Pie Chart" />
</div>


